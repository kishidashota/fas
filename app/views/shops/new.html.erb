<div class = "container-login">
    <h1>
    <%= t('ショップ情報') %>
    </h1>
    <%= form_for (@shop) do |f| %>
  <div class="form-group">
    <%= f.label :email %>      
    <%= f.text_field :shop_name, placeholder: "Shop_name", id: "text" ,class: 'form-control'%>
      </div>
          <div class="form-group">
    <%= f.label :"ショップ説明" %>
      <%= f.text_area :shop_description, placeholder: "text" , rows: "5", id: "text", class: 'form-control' %>
        </div>
                  <div class="form-group">
    <%= f.label :ユーザーネーム %>
      <%= f.file_field :shop_image , class: 'form-control'%>
      </div>
        <div class="form-group">
       <%= f.submit "登録" , class: 'btn btn-primary btn-block' %>
         </div>
    <% end %>
</div>